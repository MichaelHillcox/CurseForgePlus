{
  "manifest_version": 2,
  "name": "Curseforge Points",
  "permissions": [
    "storage"
 ],
  "version": "1.0.3",
  "description": "Little tweaks and improvements to the Curse forge Authors system",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://authors.curseforge.com/store"
      ],
      "js": [
        "curseforge.js"
      ]
    },
    {
      "matches": [
        "https://authors.curseforge.com/store/transactions"
      ],
      "js": [
        "transactions.js"
      ]
    }
  ]
}